@model MSPowerWebApp.Models.Job_OpeningViewModel

@{
    ViewBag.Title = "Home";
}

@* News Letter @Session["Language"].ToString();*@




<div class="grid_4">
    <div class="container">
        <h1 class="blog_head">Job Opening</h1>

        <div class="blog_grid span2">

            <div class="col-md-12">
                <h3><a href="#">@Model.Job_Opening.Job_Title</a></h3>
                <div class="links">
                    <ul>
                        <li><i class="fa blog-icon fa-calendar"> </i><span>@Model.Job_Opening.Updated_On.ToShortDateString()</span></li>
                    </ul>
                </div>
                <p>
                    @Html.Raw(Model.Job_Opening.Job_Description)
                </p>


            </div>


            <div class="clearfix"> </div>

        </div>


    </div>
</div>

<script>
    $(function () {

        $(".top-menu").find("li").removeClass();

        $("#liJobOpening").addClass("active");

    });
</script>







