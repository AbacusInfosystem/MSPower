@model MSPowerWebApp.Models.ProductDetailViewModel
@{
    ViewBag.Title = "Home";
}

@*Product. @Session["Language"].ToString();*@
  
<script src="~/Scripts/WebSite/product_events.js"></script>
<div class="content">
    <div class="container">
        <!---->
        <form id="frmProduct">
        <div class="products">

            <h2 style="color:#EE1C25">@Model.Product_Category.Product_Category1</h2>
            <h4>@Model.Product_Category.Product_Category_Description</h4>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="danger" colspan=13>upto @Model.Product_Category_Column_Mapping.Volts</tr>
                        <tr class="info">
                            @foreach (var item in Model.Product_Details_Header)
                            {
                                <th>@Html.Raw(item.Product_Column_Name)</th>
                            }
                            <th>Download PDF</th>
                            @*<th>Type</th>
                                <th>VDRM,VRRM [V] VDSM=VDRM VRSM=VRRM+100V</th>
                                <th>IDRM, IRRM [mA] Tjmax</th>
                                <th>@Html.Raw("ITAVM / TC [A / °C] @180° Sine") </th>
                                <th>@Html.Raw("ITSM [A] ,@ 10ms Tjmax")</th>
                                <th>@Html.Raw("ʃi2t [A2S] ,@ 10ms Tjmax")</th>
                                <th>VT / IT [ V / A ] Tjmax</th>
                                <th>@Html.Raw("V(TO) [V] @Tjmax")</th>
                                <th>@Html.Raw("rT [mΩ] @Tjmax")</th>
                                <th>Igt [mA]</th>
                                <th>@Html.Raw("RthJC [°C/W] @180° Sine")</th>
                                <th>@Html.Raw("Tjmax [ °C]")</th>
                                <th>Datasheet / Drawing</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int j = 1;

                            foreach (var item in Model.Product_Details)
                            {
                                if (j % 2 == 0)
                                {
                                    @:<tr class="danger">
                                }
                                else
                                {
                                    @:<tr>
                                }

                                j++;
                                if (Model.Product_Details_Header.Count >= 1)
                                {
                                    <td>@item.Col1</td>
                                }

                                if (Model.Product_Details_Header.Count >= 2)
                                {
                                    <td>@item.Col2</td>
                                }

                                if (Model.Product_Details_Header.Count >= 3)
                                {
                                    <td>@item.Col3</td>
                                }

                                if (Model.Product_Details_Header.Count >= 4)
                                {
                                    <td>@item.Col4</td>
                                }

                                if (Model.Product_Details_Header.Count >= 5)
                                {
                                    <td>@item.Col5</td>
                                }

                                if (Model.Product_Details_Header.Count >= 6)
                                {
                                    <td>@item.Col6</td>
                                }

                                if (Model.Product_Details_Header.Count >= 7)
                                {
                                    <td>@item.Col7</td>
                                }

                                if (Model.Product_Details_Header.Count >= 8)
                                {
                                    <td>@item.Col8</td>
                                }

                                if (Model.Product_Details_Header.Count >= 9)
                                {
                                    <td>@item.Col9</td>
                                }

                                if (Model.Product_Details_Header.Count >= 10)
                                {
                                    <td>@item.Col10</td>
                                }

                                if (Model.Product_Details_Header.Count >= 11)
                                {
                                    <td>@item.Col11</td>
                                }

                                if (Model.Product_Details_Header.Count >= 12)
                                {
                                    <td>@item.Col12</td>
                                }

                                if (Model.Product_Details_Header.Count >= 13)
                                {
                                    <td>@item.Col13</td>
                                }

                                if (Model.Product_Details_Header.Count >= 14)
                                {
                                    <td>@item.Col14</td>
                                }

                                if (Model.Product_Details_Header.Count >= 15)
                                {
                                    <td>@item.Col1</td>
                                }
                                
                                if(item.Is_PDF_Exists == true)
                                { 
                                <td>
                                    <a href="#" class="download-pdf" name="@item.Product_Detail_Id">Download</a>
                                </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                        

                                if (j % 2 == 0)
                                {
                                    @:</tr>
                                }
                                else
                                {
                                    @:</tr>
                                }

                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
            </form>
    </div>
</div>
