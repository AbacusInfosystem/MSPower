@model MSPowerWebApp.Models.ProductDetailViewModel
@{
    ViewBag.Title = "Home";
}

@*Product. @Session["Language"].ToString();*@
  
<script src="~/Scripts/WebSite/product_events.js"></script>
<div class="content">
    <div class="container">
        <!---->
        <br><br>
        <div class="box-body">
            <header class="text-center">
                <h2> @Model.Product_Category.Product_Category</h2>
            </header>
            <br><br>
            <div class="products">
                <form id="frmProduct">
                    @foreach (var item in Model.Volts)
                {


                    <h2 style="color:#EE1C25">@Model.Product_Category.Product_Category1</h2>
                    <h4>@Model.Product_Category.Product_Category_Description</h4><br>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr class="danger"><th colspan=13 style="text-align:center;"> @item.Volts &nbsp; Volts</th></tr>
                                <tr class="info">
                                    @foreach (var itm in item.Product_Details_Header)
                                    {
                                <th>@Html.Raw(itm.Product_Column_Name)</th>
                                    }
                                    <th>Download PDF</th>
                                    @*<th>Type</th>
                                        <th>VDRM,VRRM [V] VDSM=VDRM VRSM=VRRM+100V</th>
                                        <th>IDRM, IRRM [mA] Tjmax</th>
                                        <th>@Html.Raw("ITAVM / TC [A / °C] @180° Sine") </th>
                                        <th>@Html.Raw("ITSM [A] ,@ 10ms Tjmax")</th>
                                        <th>@Html.Raw("ʃi2t [A2S] ,@ 10ms Tjmax")</th>
                                        <th>VT / IT [ V / A ] Tjmax</th>
                                        <th>@Html.Raw("V(TO) [V] @Tjmax")</th>
                                        <th>@Html.Raw("rT [mΩ] @Tjmax")</th>
                                        <th>Igt [mA]</th>
                                        <th>@Html.Raw("RthJC [°C/W] @180° Sine")</th>
                                        <th>@Html.Raw("Tjmax [ °C]")</th>
                                        <th>Datasheet / Drawing</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int j = 1;

                                    foreach (var itm in item.Product_Details)
                                    {
                                        if (j % 2 == 0)
                                        {
                            @:<tr class="danger">
                                }
                                else
                                {
                                @:<tr>
                                }

                                j++;
                                if (item.Product_Details_Header.Count >= 1)
                                {
                                <td>@itm.Col1</td>
                                }

                                if (item.Product_Details_Header.Count >= 2)
                                {
                                <td>@itm.Col2</td>
                                }

                                if (item.Product_Details_Header.Count >= 3)
                                {
                                <td>@itm.Col3</td>
                                }

                                if (item.Product_Details_Header.Count >= 4)
                                {
                                <td>@itm.Col4</td>
                                }

                                if (item.Product_Details_Header.Count >= 5)
                                {
                                <td>@itm.Col5</td>
                                }

                                if (item.Product_Details_Header.Count >= 6)
                                {
                                <td>@itm.Col6</td>
                                }

                                if (item.Product_Details_Header.Count >= 7)
                                {
                                <td>@itm.Col7</td>
                                }

                                if (item.Product_Details_Header.Count >= 8)
                                {
                                <td>@itm.Col8</td>
                                }

                                if (item.Product_Details_Header.Count >= 9)
                                {
                                <td>@itm.Col9</td>
                                }

                                if (item.Product_Details_Header.Count >= 10)
                                {
                                <td>@itm.Col10</td>
                                }

                                if (item.Product_Details_Header.Count >= 11)
                                {
                                <td>@itm.Col11</td>
                                }

                                if (item.Product_Details_Header.Count >= 12)
                                {
                                <td>@itm.Col12</td>
                                }

                                if (item.Product_Details_Header.Count >= 13)
                                {
                                <td>@itm.Col13</td>
                                }

                                if (item.Product_Details_Header.Count >= 14)
                                {
                                <td>@itm.Col14</td>
                                }

                                if (item.Product_Details_Header.Count >= 15)
                                {
                                <td>@itm.Col15</td>
                                }

                                if (itm.Is_PDF_Exists == true)
                                {
                                <td>
                                    <a href="#" class="download-pdf" name="@itm.Product_Detail_Id">Download</a>
                                </td>
                                }
                                else
                                {
                                <td></td>
                                }


                                if (j % 2 == 0)
                                {
                                @:</tr>
                            }
                            else
                            {
                            @:</tr>
                                }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>


                }
                </form>
            </div>

        </div>
    </div>
</div>

<br><br>



<script>
    $(function () {

        $(".top-menu").find("li").removeClass();

        $("#liProduct").addClass("active");

    });
</script>
