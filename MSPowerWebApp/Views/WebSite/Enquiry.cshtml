@model MSPowerWebApp.Models.EnquiryViewModel


@*<script src="~/Content/AdminLTE/plugins/jQuery/jQuery-2.1.3.min.js"></script>*@



<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/Enquiry/enquiry_events.js"></script>

 <!-- daterangepicker -->

<script src="/Content/AdminLTE/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>

<!-- datepicker -->

<script src="/Content/AdminLTE/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>

  <!-- Date Picker -->
<link href="~/Content/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" media="all" />

@{
    ViewBag.Title = "Home";
}

<div class="content">
    @{Html.RenderPartial("_ServerMessage");}

    <div class="contact about-desc">

        <div class="container">

            <div class="row">

                <div class="col-md-7">

                    <h3>Enquiry</h3>

                    <div class="contact_right">

                        <div class="contact-form_grid">

                            <form id="frmEnquiry">

                                <input id="txtCustomer_Name" name="Enquiry.Customer_Name" type="text" class="textbox" value="Enter Customer Name" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Customer Name'; }">

                                <textarea id="editor1" name="Enquiry.Customer_Address" onfocus="this.value = '';" onblur="    if (this.value == '') { this.text = 'Customer Address'; }">Customer Address</textarea>

                                <input id="txtTel_No" name="Enquiry.Tel_No" type="text" class="textbox" value="Enter Telephone Number" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Telephone Number'; }">
                                
                                <input id="txtEmail" name="Enquiry.Email" type="text" class="textbox" value="Enter Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter Email';}">
                                
                                <input id="txtContact_Person" name="Enquiry.Contact_Person" type="text" class="textbox" value="Enter Contact Person" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Contact Person'; }">

                                <input id="txtContact_Person_Tel_No" name="Enquiry.Contact_Person_Tel_No" type="text" class="textbox" value="Enter Contact Person Tel No" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Contact Person Tel No'; }">
                                
                                <input id="txtContact_Person_Mobile_No" name="Enquiry.Contact_Person_Mobile_No" type="text" class="textbox" value="Enter Contact Person Mobile No" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Contact Person Mobile No'; }">

                                <input id="txtEnquiry_No" name="Enquiry.Enquiry_No" type="text" class="textbox" value="Enter Enquiry No" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Enquiry No'; }">

                                @*Date control*@

                                <input type="text" class="textbox" id="txtEnquiry_Date" name="Enquiry.Enquiry_Date" placeholder="Enquiry Date" value="@(Model.Enquiry.Enquiry_Date == DateTime.MinValue ? "" : Model.Enquiry.Enquiry_Date.ToShortDateString())" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Enquiry Date'; }">

                                @*Date control*@

                                <input id="txtProduct_Name" name="Enquiry.Product_Name" type="text" class="textbox" value="Enter Product Name" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Product Name'; }">

                                <input id="txtQuantity" name="Enquiry.Quantity" type="text" class="textbox" value="Enter Quantity" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Quantity'; }">

                                <input id="txtDelivery" name="Enquiry.Delivery" type="text" class="textbox" value="Enter Delivery" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter Delivery'; }">

                                @*<input id="txtCreated_On" name="Enquiry.Created_On" type="text" class="textbox" value="Created On" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Created On'; }">*@

                                <input id="btnSave" type="button" value="Send" class="btn">

                                <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "Enquiry")" role="button">Cancel</a>

                                <input type="hidden" name="Enquiry.Enquiry_Id" id="hdnEnquiry_Id" value="@Model.Enquiry.Enquiry_Id">

                                <input type="hidden" name="Enquiry.Language_Id" id="hdnLanguage_Id" value="@Model.Enquiry.Language_Id">

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
