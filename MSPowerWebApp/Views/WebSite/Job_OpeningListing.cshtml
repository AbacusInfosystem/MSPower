@model MSPowerWebApp.Models.Job_OpeningViewModel

@{
    ViewBag.Title = "JobOpening";
}


<div class="lang-toggles">
    <select style="border:0px; outline:0px;" id="drpMainlang">
        @if (Session["Language"].ToString() == "en")
        {
            <option value="en" selected>English</option>
        }
        else
        {
            <option value="en">English</option>
        }

        @if (Session["Language"].ToString() == "ch")
        {
            <option value="ch" selected>Chinese</option>
        }
        else
        {
            <option value="ch">Chinese</option>
        }
    </select>
</div>

<div class="content">
    <div class="grid_4">
        <div class="container">
            <h1 class="blog_head">Job Openings</h1>
            @{

            int i = 1;
            foreach (var item in Model.Job_Openings)
            {
                if (i == 1 || i % 2 == 0)
                {
        @:<div class="blog_grid span2">
                }
        <div class="col-md-6">
            <h3><a href="#">@item.Job_Title</a></h3>
            <div class="links">
                <ul>
                    <li><i class="fa blog-icon fa-calendar"> </i><span>@item.Updated_On.ToShortDateString()</span></li>
                </ul>
            </div>
            <p>
                @if (item.Job_Description.Length > 300)
                        {
                        @Html.Raw(item.Job_Description.Substring(0, 300).ToString() + "...")
                        }
                        else
                        {
                        @Html.Raw(item.Job_Description)
                        }
            </p>
            @if (item.Language_Id == 1)
{
                    <a href="/en/job_opening?Job_Opening_Id=@item.Job_Opening_Id" class="btn btn-1 btn-1c">Read More</a>


}
            else
            {
                <a href="/en/job_opening?Job_Opening_Id=@item.Job_Opening_Id" class="btn btn-1 btn-1c">Read More</a>
            }

        </div>

                if (i % 2 == 0)
                {
        @:<div class="clearfix"> </div>
        @:</div>
                }
                i++;
            }

            }

        </div>
    </div>

    </div>
    <script>
        $(function () {

            $(".top-menu").find("li").removeClass();

            $("#liJobOpening").addClass("active");

        });
    </script>
