@model MSPowerWebApp.Models.ProductViewModel


<script src="~/Scripts/Product/product_event.js"></script>
<script src="~/Scripts/Product/product_method.js"></script>

@{
    ViewBag.Title = "Product";
}

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>Product
           
            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
            <li class="active">Product</li>
        </ol>
    </section>
        <!-- Main content -->
        <section class="content">

            <div class="row">

                <div class="col-xs-12">

                    <div class="box">

                        <div class="box-body">

                            <div class="row">

                                <div class="col-md-12">

                                    <form id="frmProduct">

                                        <div class="form-group">
                                            <label style="color: #333" for="txtProduct_Title">Product Title</label>

                                            <input type="text" class="form-control input-sm" id="txtProduct_Title" placeholder="Enter Product Title" value="@Model.Product.Product_Title" name="Product.Product_Title">
                                        </div>

                                        @*</div>

                                        <div class="form-group">
                                            <label for="drpProduct_Category3" style="color: #333" class="lookup-title">Product Category3</label>
                                            <select class="form-control input-sm" id="drpProduct_Category3" name="Product.Product_Category_Id">
                                                <option value="">--Select--</option>

                                                @foreach (var item in Model.Product_Categories)
                                                {
                                                    if (item.Id == Model.Product.Product_Category_Id)
                                                    {
                                                        <option value="@item.Id" selected="selected">@item.Value</option>
                                                    }

                                                    else
                                                    {
                                                        <option value="@item.Id">@item.Value</option>
                                                    }
                                                }
                                            </select>

                                        </div>*@

                                        <div class="form-group">
                                            <label style="color: #333" for="txtContactName">Product Description</label>

                                            <textarea id="editor1" rows="10" cols="80" name="Product.Product_Description">@Model.Product.Product_Description</textarea>
                                        </div>

                                        <div class="form-group">
                                            <label style="color: #333" for="fileUpload_Product_Image">Upload Product Images</label>

                                            <input type="file" class="form-control input-sm" id="fileUpload_Product_Image" placeholder="Upload Product Image" name="">

                                            <button type="button" class="btn btn-default btn-sm" id="btnUpload">Upload Image</button>
                                        </div>

                                        <div class="form-group">

                                            <label style="color: #333">

                                                @if (Model.Product.Is_Active == true)
                                                {
                                                    <input type="checkbox" id="chkIsActive" checked />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }
                                                else
                                                {
                                                    <input type="checkbox" id="chkIsActive"/>@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }

                                                <input type="hidden" id="hdnProduct_Status" name="Product.Is_Active" value="@Model.Product.Is_Active">
                                            </label>

                                        </div>

                                        <div class="btn-group">

                                            <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>

                                            <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                            <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "Product")" role="button">Cancel</a>

                                            <button type="button" class="btn btn-default btn-sm" id="btnUploadImage">Upload Image</button>

                                            <input type="hidden" name="Product.Product_Id" id="hdnProduct_Id" value="@Model.Product.Product_Id">

                                            @*<input type="hidden" name="Product.Product_Id" id="hdfProduct_Id" value="@Model.Product.Product_Id">*@

                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                        <!-- /.box-body -->

                    </div>
                    <!-- /.box -->

                </div>

            </div>

        </section>
</div>

<script src="http://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>

<script>

    $(document).ready(function () {
        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });

    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
    CKEDITOR.replace('Product.Product_Description');

</script>
