@model MSPowerWebApp.Models.ServicesViewModel

<script src="~/Scripts/Services/services_events.js"></script>

        @{ 
            ViewBag.Title = "Services"; 
            
         }


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}

    <!-- Content Header (Page header) -->
    <section class="content-header">

        <h1>
            Services

            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
            <li class="active">Services</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">

                    <div class="box-body">

                        <div class="row">

                            <div class="col-md-12">

                                <form id="frmServices">

                                    <div class="form-group">
                                        <label style="color: #333" for="txtServices_Name">Services Name</label>

                                        <input type="text" class="form-control input-sm" id="txtServices_Name" placeholder="Enter Services Name" name="Service.Service_Title" value="@Model.Service.Service_Title">
                                    </div>

                                    <div class="form-group">
                                        <label for="drpServiceCategory" style="color: #333" class="lookup-title">Service Category</label>
                                        <select class="form-control input-sm" id="drpServiceCategory" name="Service.Service_Category_Id">
                                            <option value="" >--Select--</option>

                                            @foreach (var item in Model.Service_Categories)
                                            {
                                                if (item.Id == Model.Service.Service_Category_Id)
                                                {
                                                    <option value="@item.Id" selected="selected">@item.Value</option>
                                                }

                                                else
                                                {
                                                    <option value="@item.Id">@item.Value</option>
                                                }
                                            }
                                        </select>

                                    </div>


                                    <div class="form-group">
                                        <label style="color: #333" for="txtContactName">Services Description</label>

                                        <textarea id="editor1" rows="10" cols="80" name="Service.Service_Description">@Model.Service.Service_Description</textarea>
                                    </div>

                                    @*<div class="form-group">
                                        <label style="color: #333" for="fileUpload_Services_Image">Upload Services Images</label>

                                        <input type="file" class="form-control input-sm" id="fileUpload_Services_Image" placeholder="Upload Services Image" name="">

                                        <button type="button" class="btn btn-default btn-sm" id="btnUpload">Upload Image</button>
                                    </div>*@

                                    <div class="form-group">

                                        <label style="color: #333">

                                            @if (Model.Service.Is_Active == true)
                                            {
                                                <input type="checkbox" id="chkIsActive" checked />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }
                                            else
                                            {
                                                <input type="checkbox" id="chkIsActive" />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }

                                            <input type="hidden" id="hdnServices_Status" name="Service.Is_Active" value="@Model.Service.Is_Active">

                                        </label>

                                    </div>



                                    <div class="btn-group">

                                        <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>

                                        <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                        <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "Services")" role="button">Cancel</a>

                                        <button type="button" class="btn btn-default btn-sm" id="btnUploadImage">Upload Image</button>

                                        <input type="hidden" name="Service.Service_Id" id="hdnServices_Id" value="@Model.Service.Service_Id">

                                        @*<input type="hidden" name="Service.Service_Id" id="hdfServices_Id" value="@Model.Service.Service_Id">*@

                                    </div>

                                </form>

                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>

</div>

<script src="http://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>

<script>

    $(document).ready(function () {
        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });

    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.

    CKEDITOR.replace('Service.Service_Description', {
        filebrowserImageBrowseUrl: '/F:/Projects/MSPower/MSPowerWebApp/Content/Images',
        filebrowserImageUploadUrl: '/home/uploadnow'
    });

</script>
