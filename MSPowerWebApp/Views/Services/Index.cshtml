@{
    ViewBag.Title = "Services";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">

        <h1>
            Services

            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
            <li class="active">Services</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">

                    <div class="box-body">

                        <div class="row">

                            <div class="col-md-12">

                                <div class="form-group">
                                    <label style="color: #333" for="txtServices_Name">Services Name</label>

                                    <input type="text" class="form-control input-sm" id="txtServices_Name" placeholder="Enter Services Name" value="" name="">
                                </div>

                                <div class="form-group">
                                    <label style="color: #333" for="txtContactName">Services Description</label>

                                    <textarea id="editor1" name="editor1" rows="10" cols="80">This is my textarea to be replaced with CKEditor.</textarea>
                                </div>

                                <div class="form-group">
                                    <label style="color: #333" for="fileUpload_Services_Image">Upload Services Images</label>

                                    <input type="file" class="form-control input-sm" id="fileUpload_Services_Image" placeholder="Upload Services Image" name="">

                                    <button type="button" class="btn btn-default btn-sm" id="btnUpload">Upload Image</button>
                                </div>

                                <div class="form-group">

                                    <label style="color: #333">

                                        <input type="checkbox" name="chkServices_Status" checked />&nbsp;&nbsp;&nbsp;&nbsp; Status

                                        <input type="hidden" id="hdnServices_Status" name="" value="">
                                    </label>

                                </div>

                                <div class="btn-group">

                                    <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>

                                    <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                    <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "Product")" role="button">Cancel</a>

                                </div>

                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>

</div>

<script src="http://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>

<script>

    $(document).ready(function () {
        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });

    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
    CKEDITOR.replace('editor1');

</script>
