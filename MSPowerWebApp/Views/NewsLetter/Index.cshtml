@model MSPowerWebApp.Models.NewsLetterViewModel

<script src="~/Scripts/NewsLetter/newsletter_events.js"></script>
<script src="~/Scripts/NewsLetter/newsletter_method.js"></script>


@{
    ViewBag.Title = "NewsLetter";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">

        <h1>
            NewsLetter

            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
            <li class="active">NewsLetter</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">

                    <div class="box-body">

                        <div class="row">

                            <div class="col-md-12">

                                <form id="frmNewsLetter">

                                    <div class="form-group">
                                        <label style="color: #333" for="txtNewsLetter_Title">NewsLetter Title</label>

                                        <input type="text" class="form-control input-sm" id="txtNewsLetter_Title" placeholder="Enter NewsLetter Title" value="@Model.NewsLetter.NewsLetter_Title" name="NewsLetter.NewsLetter_Title">
                                    </div>

                                    <div class="form-group">
                                        <label style="color: #333" for="txtContactName">NewsLetter Description</label>

                                        <textarea id="editor1" rows="10" cols="80" name="NewsLetter.NewsLetter_Description">@Model.NewsLetter.NewsLetter_Description</textarea>
                                    </div>

                                    @*<div class="form-group">
                                        <label style="color: #333" for="fileUpload_NewsLetter_Image">Upload NewsLetter Images</label>

                                        <input type="file" class="form-control input-sm" id="fileUpload_NewsLetter_Image" placeholder="Upload NewsLetter Image" name="">

                                        <button type="button" class="btn btn-default btn-sm" id="btnUpload">Upload Image</button>
                                    </div>*@

                                    <div class="form-group">

                                        <label style="color: #333">

                                            @if (Model.NewsLetter.Is_Active == true)
                                            {
                                                <input type="checkbox" id="chkIsActive" checked />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }
                                            else
                                            {
                                                <input type="checkbox" id="chkIsActive" />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }

                                            <input type="hidden" id="hdnNewsLettert_Status" name="NewsLetter.Is_Active" value="@Model.NewsLetter.Is_Active">
                                        </label>

                                    </div>

                                    <div class="btn-group">

                                        <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>

                                        <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                        <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "NewsLetter")" role="button">Cancel</a>

                                        @*<button type="button" class="btn btn-default btn-sm" id="btnUploadImage">Upload Image</button>*@

                                        <input type="hidden" name="NewsLetter.NewsLetter_Id" id="hdnNewsLetter_Id" value="@Model.NewsLetter.NewsLetter_Id">

                                        @*<input type="hidden" name="NewsLetter.NewsLetter_Id" id="hdfNewsLetter_Id" value="@Model.NewsLetter.NewsLetter_Id">*@

                                    </div>

                                </form>
                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>
</div>

<script src="http://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>

<script>

    $(document).ready(function () {
        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });

    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
    CKEDITOR.replace('NewsLetter.NewsLetter_Description');

</script>
