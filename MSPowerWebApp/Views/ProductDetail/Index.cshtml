@model MSPowerWebApp.Models.ProductDetailViewModel


<script src="~/Scripts/ProductDetail/productdetail_event.js"></script>
<script src="~/Scripts/ProductDetail/productdetail_method.js"></script>

@{
    ViewBag.Title = "ProductDetail";
}

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>
            Product Detail

            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
            <li class="active">Product Detail</li>
        </ol>
    </section>

    <!-- Main content -->
    
    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">

                    <div class="box-body">

                        <div class="row">

                            <div class="col-md-12">

                                <form id="frmProductDetail">

                                    <div class="form-group">
                                        <label style="color: #333" for="txtProductDetail_Column1">Product Detail Column1</label>

                                        <input type="text" class="form-control input-sm" id="txtProductDetail_Column1" placeholder="Enter ProductDetail Column 1" value="@Model.Product_Detail.Col1" name="ProductDetail.Col1">
                                    </div>


                                    <div class="form-group">
                                        <label style="color: #333" for="txtProductDetail_Column2">Product Detail Column2</label>

                                        <input type="text" class="form-control input-sm" id="txtProductDetail_Column2" placeholder="Enter ProductDetail Column 2" value="@Model.Product_Detail.Col2" name="ProductDetail.Col2">
                                    </div>

                                    <div class="form-group">
                                        <label style="color: #333" for="txtProductDetail_Column1">Product Detail Column3</label>

                                        <input type="text" class="form-control input-sm" id="txtProductDetail_Column3" placeholder="Enter ProductDetail Column 3" value="@Model.Product_Detail.Col3" name="ProductDetail.Col3">
                                    </div>


                                    @*</div>

                                        <div class="form-group">
                                            <label for="drpProductDetail_Category3" style="color: #333" class="lookup-title">ProductDetail Category3</label>
                                            <select class="form-control input-sm" id="drpProductDetail_Category3" name="ProductDetail.ProductDetail_Category_Id">
                                                <option value="">--Select--</option>

                                                @foreach (var item in Model.ProductDetail_Categories)
                                                {
                                                    if (item.Id == Model.ProductDetail.ProductDetail_Category_Id)
                                                    {
                                                        <option value="@item.Id" selected="selected">@item.Value</option>
                                                    }

                                                    else
                                                    {
                                                        <option value="@item.Id">@item.Value</option>
                                                    }
                                                }
                                            </select>

                                        </div>*@

                                    <div class="form-group">

                                        <label style="color: #333">

                                            @if (Model.Product_Detail.Is_Active == true)
                                            {
                                                <input type="checkbox" id="chkIsActive" checked />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }
                                            else
                                            {
                                                <input type="checkbox" id="chkIsActive" />@:&nbsp;&nbsp;&nbsp;&nbsp; Status
                                                }

                                            <input type="hidden" id="hdnProductDetail_Status" name="ProductDetail.Is_Active" value="@Model.Product_Detail.Is_Active">
                                        </label>

                                    </div>

                                    <div class="btn-group">

                                        <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>

                                        <button type="button" class="btn btn-default btn-sm" id="btnReset">Reset</button>

                                        <a id="btnCancel" class="btn btn-default btn-sm" href="@Url.Action("Search", "ProductDetail")" role="button">Cancel</a>

                                        <button type="button" class="btn btn-default btn-sm" id="btnUploadImage">Upload Image</button>

                                        <input type="hidden" name="ProductDetail.ProductDetail_Id" id="hdnProductDetail_Id" value="@Model.Product_Detail.Product_Category_Column_Mapping_Id">                     

                                    </div>

                                </form>
                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>
</div>

<script>

    $(document).ready(function () {
        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });

</script>
